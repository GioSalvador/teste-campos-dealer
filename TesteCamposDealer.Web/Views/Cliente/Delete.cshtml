@model TesteCamposDealer.Web.ViewModels.ClienteViewModel

<h2>Excluir Cliente</h2>

<div>
    <h4>Tem certeza que deseja excluir este cliente?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.NomeCliente</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Endereco</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdCliente" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
