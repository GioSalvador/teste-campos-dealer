@model TesteCamposDealer.Web.ViewModels.ProdutoViewModel

<h2>Excluir Produto</h2>

<h4>Tem certeza que deseja excluir este produto?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>

    <dt class="col-sm-2">Preço</dt>
    <dd class="col-sm-10">@Model.Valor.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdProduto" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
