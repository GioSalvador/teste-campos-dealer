@model List<TesteCamposDealer.Web.ViewModels.ProdutoViewModel>

<h2>Lista de Produtos</h2>

<a asp-action="Create" class="btn btn-success mb-3">Novo Produto</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Preço Atual</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var produto in Model)
    {
        <tr>
            <td>@produto.Descricao</td>
            <td>@produto.Valor.ToString("C")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@produto.IdProduto" class="btn btn-sm btn-primary">Editar</a>
                <a asp-action="Delete" asp-route-id="@produto.IdProduto" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
