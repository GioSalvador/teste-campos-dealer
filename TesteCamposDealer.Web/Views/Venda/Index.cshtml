@model IEnumerable<TesteCamposDealer.Web.ViewModels.VendaViewModel>

@{
    ViewData["Title"] = "Vendas";
}

<h2>Lista de Vendas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Venda</a>
</p>
<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID Venda</th>
            <th>ID Cliente</th>
            <th>Cliente</th>
            <th>Data</th>
            <th class="text-end">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venda in Model)
        {
            <tr>
                <td>@venda.IdVenda</td>
                <td>@venda.IdCliente</td>
                <td>
                    <a asp-controller="Cliente"
                       asp-action="Details"
                       asp-route-id="@venda.IdCliente">
                        @venda.Cliente
                    </a>
                </td>
                <td>@venda.DthRegistro.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    @venda.VlrTotalVenda.ToString("C")
                </td>
            </tr>
        }
    </tbody>
</table>



